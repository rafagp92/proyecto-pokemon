<%- include('partials/_header'); -%>

<div class="container">

    <div class="row">
      <!--FORM-->
      <div class="col-md-5">
        <div class="card">
          <div class="card-body">
            <form action="/add" method="post">
              <div class="form-group">
                <input class="form-control" type="text" name="usuario" placeholder="Usuario">
              </div>
              <div class="form-group">
                <textarea class="form-control" name="detailSession" cols="80"
                  placeholder="Añade una descripción"
                  ></textarea>
              </div>
              <div class="form-group">
                <textarea class="form-control" name="pokemons" cols="80"
                  placeholder="Pokemons capturados"
                  ></textarea>
              </div>
              <button class="btn btn-primary" type="submit">
                Add
              </button>
            </form>
          </div>
        </div>
      </div>
  
      <!-- LIST -->
      <div class="col-md-7">
        <table class="table table-bordered table-hover" style="background-color: white;">
          <thead>
            <tr>
              <th>N°</th>
              <th>Usuario</th>
              <th>Descripcion</th>
              <th>Pokemons capturados</th>
              <th>Operations</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < pokemon.length; i++) { %>
              <tr>
                <td><%= i + 1%></td>
                <td><strong><%= pokemon[i].usuario %></strong></td>
                <td><%= pokemon[i].detailSession %></td>
                <td><%= pokemon[i].pokemons %></td>
                <td>
                  <a href="/delete/<%= pokemon[i]._id %>"
                    class="btn btn-danger">
                    Delete
                  </a>
                  <a href="/edit/<%= pokemon[i]._id %>" class="btn btn-info">
                    Edit
                  </a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
  
      </div>
    </div>
  
  </div>


<%- include('partials/_footer'); -%>